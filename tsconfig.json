{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "system",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es5",
            "dom",
            "scripthost"
        ],
    },
    "include": [
        "src/**/*"
    ]
}
